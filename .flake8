[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache

ignore = 
    E203,
    W503,
    W293,
    W291,
    F541,

per-file-ignores =
    tests/*:E501,F401,E402
    examples/*:F401,E402